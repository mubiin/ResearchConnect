<% include ../partials/header %>

<div class="row justify-content-center py-4">
	<div class="col-10 col-md-8 col-xl-5">
		<form onsubmit="return confirm('Are you sure?');" 
			  action="/jobs/<%=job._id%>/apply" enctype="multipart/form-data" method="POST">
			<h1 class="font-weight-light text-center mb-3">Application Form</h1>
			<hr class="my-1">
			<p class="lead my-0 text-center" id="companyName"><%= job.company %></p>
			<p class="lead my-0 text-center"><%= job.role %></p>
			<p class="text-center"><small><%= job.location %></small></p>
			
			<div class="input-group mt-4 mb-1">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroupFileAddon01">Resume</span>
				</div>
				
				<div class="custom-file">
					<input type="file" class="custom-file-input" name="resume" id="inputGroupFile01" 
					aria-describedby="inputGroupFileAddon01" required>
					<label class="custom-file-label" for="inputGroupFile01">Choose file</label>
				</div>
			</div>
			<% if (user.resume.data) { %>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="checkbox" name="defaultResume" id="resumeCheck">
					<label class="form-check-label" for="resumeCheck">
						Use default resume
					</label>
				</div>
			<% } %>
			
			
			<div class="input-group mt-3 mb-1">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroupFileAddon02">Cover Letter</span>
				</div>
				<div class="custom-file">
					<input type="file" class="custom-file-input" name="coverLetter" id="inputGroupFile02" 
					aria-describedby="inputGroupFileAddon02">
					<label class="custom-file-label" for="inputGroupFile02">Choose file</label>
				</div>
			</div>
			
			<div class="form-group my-4">
				<button class="btn btn-outline-primary btn-block">Apply</button>
			</div>
		</form>	
	</div>
</div>

<% include ../partials/footer %>