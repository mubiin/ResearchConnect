<% include ../partials/header %>
<title>Create New Posting - ResearchConnect</title>

<div class="container border rounded py-4 px-5">

	<form onsubmit="return confirm('Are you sure?');" action="/jobs" method="POST">
		<p class="display-4 text-center">
			Create Posting
		</p>
		<hr>
		<div class="form-group">
			<label class="lead">Institution Name:</label>
			<input type="text" name="job[company]" class="form-control" placeholder="Institution Name" required>
		</div>
		
		<div class="form-row">
			<div class="col-md-4 mb-3">
				<label class="lead">Location:</label>
				<input type="text" name="job[location]" class="form-control" placeholder="e.g. Vancouver, BC" required>
			</div>
			<div class="col-md-4 mb-3">
				<label class="lead">Job role:</label>
				<input type="text" name="job[role]" class="form-control" placeholder="Job title" required>
			</div>
			<div class="col-md-4 mb-3">
				<label class="lead">Application Deadline:</label>
				<input type="date" name="job[deadline]" class="form-control" min="<%=moment().format("YYYY-MM-DD")%>" required>
			</div>
		</div>
		
		<div class="form-group">
			<p class="mb-1 lead">Job Description:</p>
			<div class="btn-group btn-group-toggle mb-2 mr-2" data-toggle="buttons">
				<label class="btn btn-outline-primary btn-sm active">
					<input type="radio" name="job[workLoad]" value="Full-time" checked required> Full-time
		  		</label>
				<label class="btn btn-outline-primary btn-sm">
					<input type="radio" name="job[workLoad]" value="Part-time" required> Part-time
				</label>	
				<label class="btn btn-outline-primary btn-sm">
					<input type="radio" name="job[workLoad]" value="One-off" required> One-off
				</label>
			</div>
			
			<div class="btn-group btn-group-toggle mb-2 mr-2" data-toggle="buttons">
				<label class="btn btn-outline-primary btn-sm active">
					<input type="radio" name="job[paid]" value="Paid" checked required>Paid
		  		</label>
				<label class="btn btn-outline-primary btn-sm">
					<input type="radio" name="job[paid]" value="Volunteer" required>Volunteer
				</label>	
			</div>
			
			<div class="btn-group btn-group-toggle mb-2" data-toggle="buttons">
				<label class="btn btn-outline-primary btn-sm">
					<input type="checkbox" name="job[term]" value="Winter T1">Winter T1
		  		</label>
				<label class="btn btn-outline-primary btn-sm">
					<input type="checkbox" name="job[term]" value="Winter T2">Winter T2
		  		</label>
				<label class="btn btn-outline-primary btn-sm">
					<input type="checkbox" name="job[term]" value="Summer T1">Summer T1
				</label>	
				<label class="btn btn-outline-primary btn-sm">
					<input type="checkbox" name="job[term]" value="Summer T2">Summer T2
				</label>	
			</div>
		</div>
		
		<div class="form-group">
			<textarea class="form-control" name="job[description]" rows="15"></textarea>	
		</div>
		
		<div class="form-group">
			<button class="btn btn-outline-primary btn-lg">
				Submit
			</button> 
		</div>
	
	</form>
</div>

<% include ../partials/footer %>